# Demo Steps
# ============================================================================

step_intro() {
    print_banner

    echo -e "This demo shows ${BOLD}zero-touch credential management${RESET} for GPU clusters."
    echo ""
    echo "You'll see:"
    echo -e "   1. ğŸš€ Control plane and DPU emulator startup"
    echo -e "   2. ğŸ¢ Multi-tenant isolation"
    echo -e "   3. ğŸ” Fleet registration in one command"
    echo -e "   4. âœ… Automated node health verification"
